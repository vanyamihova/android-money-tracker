<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mfg="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="7dp"
    android:layout_marginRight="7dp"
    android:layout_marginLeft="7dp"
    android:paddingTop="5dip"
    android:paddingLeft="8dip"
    android:paddingRight="8dip"
    android:minHeight="48dip">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="10dip"
        android:paddingLeft="10dip"
        android:paddingBottom="5dip"
        android:paddingTop="5dip">

        <!-- ICON -->
        <com.megaflashgames.moneynotebook.ui.view.FTextView
            android:id="@+id/tv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="50sp"
            android:textColor="@color/colorDarkGrey"
            mfg:font="@string/font_icons"  />

        <!-- CONTAINER WITH INFO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_icon"
            android:paddingLeft="12dip"
            android:orientation="vertical">

            <!-- TITLE -->
            <com.megaflashgames.moneynotebook.ui.view.FTextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="22sp"
                android:textColor="@android:color/black"
                mfg:font="@string/font_mainLight" />

            <!-- SUB INFO -->
            <com.megaflashgames.moneynotebook.ui.view.FTextView
                android:id="@+id/tv_subInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="sub info"
                android:textSize="10sp"
                android:textColor="@color/colorDarkGrey"
                mfg:font="@string/font_mainLight" />

        </LinearLayout>

        <!-- DATE -->
        <com.megaflashgames.moneynotebook.ui.view.FTextView
            android:id="@+id/tv_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:text="20.01.2015"
            android:textSize="14sp"
            android:textColor="@color/colorDarkGrey"
            mfg:font="@string/font_mainLight" />

        <!-- TOTAL PRICE -->
        <com.megaflashgames.moneynotebook.ui.view.FTextView
            android:id="@+id/tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="$8.00"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            mfg:font="@string/font_mainLight" />


    </RelativeLayout>

</android.support.v7.widget.CardView>